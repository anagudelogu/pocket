<%= render partial: 'shared/header', locals: { path: categories_path, title: @category.name.upcase} %>
<section class="min-h-screen flex flex-col justify-start items-center bg-zinc-100">
  <div class="w-full">
  <div class="py-4 px-6 shadow-md bg-white flex justify-between">
    <p class="">Total amount:</p>
    <span class="font-proxima_bold">$<%= @category.total_amount %></span>
  </div>
  <ul id="expenses-list" class="w-full px-4 mb-12 mt-4">
    <%= render @expenses %>
  </ul>
    <div class="fixed bottom-0 bg-green w-full text-center py-5">
      <%= link_to 'NEW EXPENSE', new_category_expense_path(@category), class: 'border border-white py-2 px-4 text-white' %>
    </div>
  </div>
</section>
