<%= render partial: 'shared/header', locals: { path: root_path, title: 'LOGIN'} %>
<section class="min-h-screen max-h-screen flex flex-col justify-start items-center bg-zinc-100 py-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false}, html: { class: 'w-full'}) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'input-field' %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: 'Password', class: 'input-field' %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'header-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
